//Create another 2 new sequence of LED Light Show and make it LedLightShow2() and LedLightShow3() function.

void setup()//pin mode sut up
{
  
  pinMode(2, OUTPUT);
  pinMode(3, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(5, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(7, OUTPUT);
  pinMode(8, OUTPUT);
  pinMode(9, OUTPUT);
}

void LedLightShow1()//1st sequence of led show
{
  digitalWrite(9, HIGH);
  delay(400);
  
  digitalWrite(8, HIGH);
  delay(400);
  
  digitalWrite(7, HIGH);
  delay(400);
  
  digitalWrite(6, HIGH);
  delay(400);
  
  digitalWrite(5, HIGH);
  delay(400);
  
  digitalWrite(4, HIGH);
  delay(400);
  
  digitalWrite(3, HIGH);
  delay(400);
  
  digitalWrite(2, HIGH);
  delay(400);
  
  digitalWrite(2, LOW);
  delay(400);
  
  digitalWrite(3, LOW);
  delay(400);
  
  digitalWrite(4, LOW);
  delay(400);
  
  digitalWrite(5, LOW);
  delay(400);
  
  digitalWrite(6, LOW);
  delay(400);
  
  digitalWrite(7, LOW);
  delay(400);
  
  digitalWrite(8, LOW);
  delay(400);
  
  digitalWrite(9, LOW);
  delay(400);
}

void LedLightShow2()//2nd sequence of led show
{

  digitalWrite(5, HIGH);
  digitalWrite(6, HIGH);
  delay(400);
  
  digitalWrite(5, LOW);
  digitalWrite(6, LOW);
  delay(400);
  
  digitalWrite(7, HIGH);
  digitalWrite(4, HIGH);
  delay(400);
  
  digitalWrite(7, LOW);
  digitalWrite(4, LOW);
  delay(400);
  
  digitalWrite(8, HIGH);
  digitalWrite(3, HIGH);
  delay(400);
  
  digitalWrite(8, LOW);
  digitalWrite(3, LOW);
  delay(400);
  
  digitalWrite(9, HIGH);
  digitalWrite(2, HIGH);
  delay(400);
  
  digitalWrite(9, LOW);
  digitalWrite(2, LOW);
  delay(400);
  
  digitalWrite(5, HIGH);
  digitalWrite(6, HIGH);
  delay(400);
  
  digitalWrite(5, LOW);
  digitalWrite(6, LOW);
  delay(400);
  
  digitalWrite(4, HIGH);
  digitalWrite(7, HIGH);
  delay(400);
  
  digitalWrite(4, LOW);
  digitalWrite(7, LOW);
  delay(400);
  
  digitalWrite(3, HIGH);
  digitalWrite(8, HIGH);
  delay(400);
  
  digitalWrite(3, LOW);
  digitalWrite(8, LOW);
  delay(400);
  
  digitalWrite(2, HIGH);
  digitalWrite(9, HIGH);
  delay(400);
  
  digitalWrite(2, LOW);
  digitalWrite(9, LOW);
  delay(400);
}

void LedLightShow3()//3rd sequence of led show
{
  digitalWrite(2, HIGH);
  digitalWrite(9, HIGH);
  delay(400);
  
  digitalWrite(2, LOW);
  digitalWrite(9, LOW);
  delay(400);
  
  digitalWrite(3, HIGH);
  digitalWrite(8, HIGH);
  delay(400);
  
  digitalWrite(3, LOW);
  digitalWrite(8, LOW);
  delay(400);
  
  digitalWrite(4, HIGH);
  digitalWrite(7, HIGH);
  delay(400);
  
  digitalWrite(4, LOW);
  digitalWrite(7, LOW);
  delay(400);
  
  digitalWrite(5, HIGH);
  digitalWrite(6, HIGH);
  delay(400);
  
  digitalWrite(5, LOW);
  digitalWrite(6, LOW);
  delay(400);
  
  digitalWrite(5, HIGH);
  digitalWrite(6, HIGH);
  delay(400);
  
  digitalWrite(5, LOW);
  digitalWrite(6, LOW);
  delay(400);
  
  digitalWrite(4, HIGH);
  digitalWrite(7, HIGH);
  delay(400);
  
  digitalWrite(4, LOW);
  digitalWrite(7, LOW);
  delay(400);
  
  digitalWrite(3, HIGH);
  digitalWrite(8, HIGH);
  delay(400);
  
  digitalWrite(3, LOW);
  digitalWrite(8, LOW);
  delay(400);
  
  digitalWrite(2, HIGH);
  digitalWrite(9, HIGH);
  delay(400);
  
  digitalWrite(2, LOW);
  digitalWrite(9, LOW);
  delay(400);
}

void loop()
{
      LedLightShow1();
      LedLightShow2();
      LedLightShow3();
}
